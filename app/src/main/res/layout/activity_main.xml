<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="490dp"
    android:layout_height="1065dp"
    android:background="@drawable/shape1"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="947dp"
        android:background="@drawable/shape"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="18dp"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/outfit_style"
            android:text="@string/title"
            android:textColor="@color/text_color"
            android:textSize="31sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/big_card_view"
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="44dp"
            app:cardBackgroundColor="@color/card_background_color"
            app:cardCornerRadius="30dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="22dp"
                android:fontFamily="@font/outfit_style"
                android:text="@string/card_view_text"
                android:textColor="@color/card_text_color"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/charge"
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:layout_marginStart="167dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="7dp"
                android:src="@drawable/car" />

            <ImageView
                android:id="@+id/battery"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="67dp"
                android:src="@drawable/battery" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="118dp"
                android:src="@drawable/charge" />

            <TextView
                android:id="@+id/charge_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="61dp"
                android:layout_marginTop="61dp"
                android:fontFamily="@font/outfit_regular"
                android:text="262"
                android:textColor="@color/card_text_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/number_of_km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="61dp"
                android:layout_marginTop="83dp"
                android:fontFamily="@font/poppins_light_style"
                android:text="@string/km"
                android:textAllCaps="true"
                android:textColor="@color/light_card_text_color"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/percent_of_charge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="61dp"
                android:layout_marginTop="118dp"
                android:fontFamily="@font/outfit_regular"
                android:text="@string/percent"
                android:textColor="@color/card_text_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="61dp"
                android:layout_marginTop="140dp"
                android:fontFamily="@font/poppins_light_style"
                android:text="@string/charged"
                android:textAllCaps="true"
                android:textColor="@color/light_card_text_color"
                android:textSize="10sp" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/second_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="43dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/outfit_style"
            android:text="@string/nearby_chargers"
            android:textColor="@color/text_color"
            android:textSize="31sp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:fontFamily="@font/poppins_light_style"
                android:text="@string/place"
                android:textColor="@color/light_card_text_color"
                android:textSize="14sp"

                />

            <TextView
                android:id="@+id/change_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/poppins_regular_style"
                android:text="@string/change_location"
                android:textColor="@color/link"
                android:textSize="14sp"

                />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="134dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="29dp"
            app:cardBackgroundColor="@color/card_background_color"
            app:cardCornerRadius="30dp">

            <ImageView
                android:layout_width="102dp"
                android:layout_height="94dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="21dp"
                android:src="@drawable/station1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="143dp"
                android:layout_marginTop="26dp"
                android:fontFamily="@font/outfit_regular"
                android:text="@string/station1"
                android:textColor="@color/card_text_color"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="148dp"
                android:layout_marginTop="56dp"
                android:fontFamily="@font/poppins_light_style"
                android:text="@string/street1"
                android:textAllCaps="true"
                android:textColor="@color/card_street_text_color"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="148dp"
                android:layout_marginTop="73dp"
                android:fontFamily="@font/poppins_light_style"
                android:text="@string/country"
                android:textColor="@color/card_street_text_color"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="149dp"
                android:layout_marginTop="99dp"
                android:fontFamily="@font/poppins_medium_style"
                android:text="@string/ports"
                android:textColor="@color/ports" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="134dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="29dp"
            app:cardBackgroundColor="@color/card_background_color"
            app:cardCornerRadius="30dp">


            <ImageView
                android:layout_width="97dp"
                android:layout_height="94dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="21dp"
                android:src="@drawable/station2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="143dp"
                android:layout_marginTop="26dp"
                android:fontFamily="@font/outfit_regular"
                android:text="@string/chargepoint_station_2"
                android:textColor="@color/card_text_color"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="148dp"
                android:layout_marginTop="56dp"
                android:fontFamily="@font/poppins_light_style"
                android:text="@string/street2"
                android:textAllCaps="true"
                android:textColor="@color/card_street_text_color"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="148dp"
                android:layout_marginTop="73dp"
                android:fontFamily="@font/poppins_light_style"
                android:text="@string/country"
                android:textColor="@color/card_street_text_color"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="149dp"
                android:layout_marginTop="99dp"
                android:fontFamily="@font/poppins_medium_style"
                android:text="@string/ports2"
                android:textColor="@color/gold" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="match_parent"
            android:layout_height="134dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="29dp"
            app:cardBackgroundColor="@color/card_background_color"
            app:cardCornerRadius="30dp">


            <ImageView
                android:layout_width="97dp"
                android:layout_height="94dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="21dp"
                android:src="@drawable/station3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="143dp"
                android:layout_marginTop="26dp"
                android:fontFamily="@font/outfit_regular"
                android:text="@string/station3"
                android:textColor="@color/card_text_color"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="148dp"
                android:layout_marginTop="56dp"
                android:fontFamily="@font/poppins_light_style"
                android:text="@string/street3"
                android:textAllCaps="true"
                android:textColor="@color/card_street_text_color"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="148dp"
                android:layout_marginTop="73dp"
                android:fontFamily="@font/poppins_light_style"
                android:text="@string/country"
                android:textColor="@color/card_street_text_color"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="149dp"
                android:layout_marginTop="99dp"
                android:fontFamily="@font/poppins_medium_style"
                android:text="5 Ports Available"
                android:textColor="@color/ports" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <ImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="163dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/img_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="262dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/img_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <ImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="360dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/img_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="403dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/img_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>